{
  "version": 2,

  "builds": [
    { "src": "admin/**/*",  "use": "@vercel/static" },
    { "src": "blog/**/*",   "use": "@vercel/static" },
    { "src": "*.html",      "use": "@vercel/static" },
    { "src": "css/**/*",    "use": "@vercel/static" },
    { "src": "js/**/*",     "use": "@vercel/static" },
    { "src": "images/**/*", "use": "@vercel/static" }
  ],

  "redirects": [
    {
      "source": "/blog/:blogslug.html",
      "destination": "/blog/:blogslug",
      "permanent": true
    }
  ],

  "routes": [
    { "handle": "filesystem" },

    {
      "src": "/admin(?:/(.*))?$",
      "dest": "/admin/index.html"
    },

    {
      "src": "/admin-login",
      "dest": "/admin/admin-login.html"
    },
    {
      "src": "/blog/:blogslug",
      "dest": "/blog/:blogslug.html"
    },

    { "src": "/",             "dest": "/index.html"       },
    { "src": "/dashboard",    "dest": "/dashboard.html"   },
    { "src": "/features",     "dest": "/features.html"    },
    { "src": "/about",        "dest": "/about.html"       },
    { "src": "/contact",      "dest": "/contact.html"     },
    { "src": "/login",        "dest": "/login.html"       },
    { "src": "/register",     "dest": "/register.html"    },
    { "src": "/feedback",     "dest": "/feedback.html"    },
    { "src": "/privacy-policy","dest": "/privacy-policy.html"},
    { "src": "/terms-of-use", "dest": "/terms-of-use.html" },

    { "handle": "miss" }
  ],

  "cleanUrls": false,
  "trailingSlash": false
}
